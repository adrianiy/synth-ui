{
    "name": "glyph-core",
    "version": "1.1.1",
    "license": "MIT",
    "scripts": {
        "start": "nodemon --exec npm run build",
        "start:docs": "start-storybook --quiet -p 6010 --no-manager-cache",
        "build": "npm run tsc && babel src --out-dir ./dist --extensions \".ts,.tsx\" --source-maps inline",
        "tsc": "tsc",
        "storybook": "start-storybook -p 6006",
        "build:docs": "build-storybook --quiet -o ./../../docs/core && npm run creevey",
        "creevey": "creevey --extract && move-file stories.json ./../../docs/core/stories.json"
    },
    "files": [
        "dist/"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "peerDependencies": {
        "dayjs": "^1.10.5",
        "sass-loader": "^10"
    },
    "dependencies": {
        "@babel/cli": "^7.13.10",
        "@babel/polyfill": "^7.12.1",
        "babel-plugin-const-enum": "^1.0.1",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "callsites": "^3.1.0",
        "dayjs": "^1.10.5",
        "js-yaml": "^4.1.0",
        "lodash-es": "^4.17.21",
        "log4js": "^6.3.0",
        "redux": "^4.0.5",
        "typescript": "^4.2.3"
    },
    "devDependencies": {
        "@babel/core": "^7.14.8",
        "@storybook/addon-actions": "^6.3.4",
        "@storybook/addon-essentials": "^6.3.4",
        "@storybook/addon-links": "^6.3.4",
        "@storybook/addon-postcss": "^2.0.0",
        "@storybook/html": "^6.3.4",
        "@types/lodash-es": "^4.17.4",
        "babel-loader": "^8.2.2",
        "move-file-cli": "^2.0.0",
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5",
        "lit-html": "^1.3.0",
        "sass-loader": "^10"
    }
}

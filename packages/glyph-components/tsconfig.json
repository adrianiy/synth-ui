{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true, 
        "allowUnreachableCode": false,
        "declaration": false,
        "experimentalDecorators": true,
        "lib": ["dom", "es2019", "ES6"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "module": "esnext",
        "target": "es2017",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react",
        "jsxFactory": "h",
        "paths": {
            "@app": ["./src"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}

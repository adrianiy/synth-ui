    "description": "Wrapper of web components for react",
    "dependencies": {
        "@storybook/preset-create-react-app": "^3.1.7",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "@types/jest": "^26.0.15",
        "@types/node": "^12.0.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "dayjs": "^1.10.5",
        "glyph-components": "^1.16.2-alpha.0",
        "glyph-core": "^1.16.2-alpha.0",
        "npm-run-all": "^4.1.5",
        "progress-bar-webpack-plugin": "^2.1.0",
        "prop-types": "^15.7.2",
        "react-scripts": "4.0.3",
        "typescript": "^4.1.2",
        "web-vitals": "^1.0.1"
    },
    "peerDependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-redux": "^7.2.3",
        "redux": "^4.0.5"
    },
    "scripts": {
        "start": "rollup -c -w",
        "build": "rollup -c && tsc",
        "build:watch": "rollup -c -w",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint src/**/*.{ts,tsx} --fix --resolve-plugins-relative-to .",
        "start:docs": "start-storybook -p 6009 --quiet --no-manager-cache -s ./../glyph-components/dist",
        "build:docs": "build-storybook --quiet -o ./../../docs/react && npm run creevey",
        "creevey": "creevey --extract && move-file stories.json ./../../docs/react/stories.json"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/cli": "^7.13.14",
        "@babel/core": "^7.13.14",
        "@babel/preset-env": "^7.13.12",
        "@babel/preset-react": "^7.13.13",
        "@babel/preset-typescript": "^7.13.0",
        "@rollup/plugin-babel": "^5.3.0",
        "@storybook/addon-actions": "^6.2.1",
        "@storybook/addon-essentials": "^6.2.1",
        "@storybook/addon-links": "^6.2.1",
        "@storybook/react": "^6.2.1",
        "@types/prop-types": "^15.7.3",
        "babel-loader": "^8.2.2",
        "react-redux": "^7.2.3",
        "redux": "^4.0.5",
        "rollup": "^2.44.0",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-delete": "^2.0.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-typescript2": "^0.30.0"
    }

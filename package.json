{
    "name": "glyph-ui",
    "private": true,
    "scripts": {
        "start": "npm-run-all start:front start:docs",
        "start:front": "lerna run start --parallel",
        "start:docs": "npm-run-all --parallel docs:wait start:projectDocs",
        "start:projectDocs": "lerna run start:docs --parallel",
        "stencil": "lerna run --scope=*components* --parallel",
        "react": "lerna run --scope=*react* --parallel",
        "angular": "lerna run --scope=*angular* --parallel",
        "core": "lerna run --scope=*core* --parallel",
        "docs:wait": "wait-on -c wait-on.json && npm run docs:base",
        "docs:base": "start-storybook --quiet -p 6006 --no-manager-cache",
        "build": "lerna run build --stream",
        "build:docs": "build-storybook --quiet -s ./packages/glyph-components/dist -o ./docs",
        "postbuild:docs": "npm run creevey && lerna run build:docs --parallel",
        "postinstall": "npm run bootstrap",
        "publish:docs": "storybook-to-ghpages --existing-output-dir=docs --ci",
        "bootstrap": "lerna bootstrap",
        "lint": "lerna run lint --parallel",
        "link": "lerna link",
        "creevey": "creevey --extract && move-file stories.json docs/stories.json",
        "semantic-release": "lerna exec --concurrency 1 --scope=\"glyph-*\" -- npx semantic-release -e semantic-release-monorepo"
    },
    "devDependencies": {
        "@babel/core": "^7.13.13",
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/commit-analyzer": "^8.0.1",
        "@semantic-release/git": "^9.0.0",
        "@semantic-release/github": "^7.0.5",
        "@semantic-release/npm": "^7.0.5",
        "@semantic-release/release-notes-generator": "^9.0.1",
        "@storybook/addon-actions": "^6.3.0",
        "@storybook/addon-essentials": "^6.3.0",
        "@storybook/addon-links": "^6.3.0",
        "@storybook/html": "^6.3.0",
        "@storybook/storybook-deployer": "^2.8.10",
        "@typescript-eslint/eslint-plugin": "^4.18.0",
        "@typescript-eslint/eslint-plugin-tslint": "^4.16.1",
        "@typescript-eslint/parser": "^4.18.0",
        "babel-loader": "8.1.0",
        "creevey": "0.7.31",
        "eslint": "^7.22.0",
        "eslint-config-airbnb-typescript": "^12.3.1",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.23.1",
        "husky": "^4.3.8",
        "lerna": "^3.22.1",
        "lint-staged": "^10.5.4",
        "move-file-cli": "^2.0.0",
        "progress-bar-webpack-plugin": "^2.1.0",
        "semantic-release": "^17.0.6",
        "semantic-release-monorepo": "^7.0.5",
        "storybook-addon-designs": "^6.0.0",
        "storybook-addon-themes": "^6.1.0",
        "storybook-dark-mode": "^1.0.8"
    },
    "dependencies": {
        "npm-run-all": "^4.1.5",
        "sass": "^1.35.1",
        "sass-loader": "^10",
        "typescript": "^4.2.3",
        "wait-on": "^5.3.0"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged",
            "pre-push": "npm run lint"
        }
    },
    "lint-staged": {
        "*.{js, ts, tsx}": [
            "eslint --fix"
        ]
    },
    "storybook-deployer": {
        "gitUsername": "Adrian Insua",
        "gitEmail": "adrianiy@ext.inditex.com",
        "commitMessage": "chore: Deploy Storybook [skip ci]"
    },
    "version": "3.11.3"
}
